# Backend Configuration
PORT=8080
NODE_ENV=development

# JWT Secret - CHANGE IN PRODUCTION!
JWT_SECRET=change-this-secret-in-production-use-random-64-chars

# Database
DATABASE_URL=file:./dev.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/viflow

# Redis
REDIS_URL=redis://localhost:6379

# Uploads & Deployment
UPLOAD_DIR=/srv/viflow/uploads
DEPLOY_ROOT=/var/www/viflow
SCRIPTS_DIR=/opt/viflow/ops/scripts

# Upload Limits (in bytes, 2GB default)
MAX_UPLOAD_SIZE=2147483648

# Basic Auth
BASIC_AUTH_DEFAULT_USER=viewer

# Admin Seed (CHANGE BEFORE PRODUCTION!)
SEED_ADMIN_USERNAME=admin
SEED_ADMIN_PASSWORD=admin123!

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173

# Email for Let's Encrypt
LETSENCRYPT_EMAIL=admin@example.com

# Frontend Build Path
FRONTEND_DIST=../frontend/dist
