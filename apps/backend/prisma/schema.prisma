// Prisma Schema für ViFlow Manager
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // Für PostgreSQL: provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  role         String   @default("USER") // "ADMIN" | "USER"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Tenant {
  id        String   @id @default(uuid())
  name      String   // Company/customer name
  domain    String   @unique // Base domain for sites (e.g., "pm-iwt.de")
  email     String   @unique // Login email for tenant
  passwordHash String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sites     Site[]
}

model Site {
  id               String       @id @default(uuid())
  name             String
  domain           String       @unique
  slug             String       @unique
  description      String?
  basicAuthUser    String
  basicAuthPassword String       // Plain text password for htpasswd generation
  basicAuthEnabled Boolean      @default(true)
  viflowVersion    String?      // "7" | "8" | "9"
  containerName    String?      @unique
  containerPort    Int?
  containerStatus  String?      @default("stopped") // "building" | "running" | "stopped" | "error"
  customLogoPath   String?      // Path to custom logo file
  tenantId         String?      // Link to tenant (nullable for migration)
  tenant           Tenant?      @relation(fields: [tenantId], references: [id], onDelete: SetNull)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  deployments      Deployment[]

  @@index([tenantId])
}

model Deployment {
  id         String   @id @default(uuid())
  siteId     String
  site       Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  status     String   @default("QUEUED") // "QUEUED" | "RUNNING" | "SUCCESS" | "FAILED"
  message    String?
  log        String?  @default("")
  createdAt  DateTime @default(now())
  startedAt  DateTime?
  finishedAt DateTime?

  @@index([siteId])
}
